<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/post_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_post_text_margin_top"
        android:textSize="@dimen/item_post_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello" />

    <TextView
        android:id="@+id/post_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_post_rate_margin_top"
        android:layout_marginBottom="@dimen/item_post_rate_margin_bottom"
        android:textSize="@dimen/item_post_counter_text_size"
        android:gravity="center"
        app:drawableStartCompat="@drawable/ic_post_rate_24"
        android:drawablePadding="@dimen/item_post_ic_rate_draw_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_text"
        tools:text="14"/>

    <TextView
        android:id="@+id/post_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_post_comment_margin_top"
        android:layout_marginEnd="@dimen/item_post_comment_margin_end"
        android:layout_marginBottom="@dimen/item_post_comment_margin_bottom"
        android:gravity="center"
        android:textSize="@dimen/item_post_counter_text_size"
        app:drawableStartCompat="@drawable/ic_post_comment_24"
        android:drawablePadding="@dimen/item_post_ic_comment_draw_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_text"
        tools:text="7" />

</androidx.constraintlayout.widget.ConstraintLayout>
